    <div class="easter-egg">more to come...</div>
  </div>

  <!-- Folder Click Sound -->
  <audio id="openSound" src="open.mp3" preload="auto"></audio>

  <script>
    function revealDrop() {
      const folder = document.getElementById('folder');
      const openSound = document.getElementById('openSound');
      openSound.play();
      folder.classList.add('open-animation');
      setTimeout(() => {
        folder.style.display = 'none';
        document.getElementById('dropContent').style.display = 'flex';
      }, 400);
    }
  </script>
